#include <stdio.h>
#include <stdlib.h>

#define DESCUENTO 10
#define INTERES 25
#define BITCOIN 4606954.55

int main(void) {
	setbuf(stdout, NULL);

	float precioAerolineas;

	int porcentajeDescuento;
	porcentajeDescuento = 10;
	printf("Ingresa el precio original: ");
	scanf("%f", &precioAerolineas);

	float descuento = precioAerolineas * (porcentajeDescuento / 100);
	float precioConDescuento = precioAerolineas - descuento;
	printf("Precio con descuento: %0.2f", precioConDescuento);
	return EXIT_SUCCESS;
}
