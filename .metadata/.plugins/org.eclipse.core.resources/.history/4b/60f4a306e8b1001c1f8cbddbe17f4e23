	scanf("%f", &x);
	printf("Ingrese el precio del vuelo con Aerolineas");
	scanf("%f", &y);
	printf("Ingrese el precio del vuelo con Latam");
	scanf("%f", &z);

	descuentoAerolineas = y * (DESCUENTO / 100);
	aumentoAerolineas = y * (INTERES / 100);
	precioConDescuentoAerolineas = y - descuentoAerolineas;
	precioConAumentoAerolineas = y + aumentoAerolineas;

	printf("1:%f 2:%f", descuentoAerolineas, aumentoAerolineas);

	/*descuentoLatam = z * (DESCUENTO / 100);
